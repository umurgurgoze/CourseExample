 
@model EntityLayer.Concrete.Doctor
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="comment-top">
    <h4>Kayıt Güncelle</h4><br />
    <div class="col-xs-7">
        <form action="#" method="post">
            ID:<br />
            @Html.TextBoxFor(x => x.DoctorId, new { @class = "form-control", placeholder = "Id" })
            Ünvan:<br />
            @Html.TextBoxFor(x => x.DoctorTitle, new { @class = "form-control", placeholder = "Ünvan" })
            Ad:<br />
            @Html.TextBoxFor(x => x.DoctorName, new { @class = "form-control", placeholder = "Ad" })
            Soyad:<br />
            @Html.TextBoxFor(x => x.DoctorSurname, new { @class = "form-control", placeholder = "Soyad" })
            Klinik:<br />
            @Html.TextBoxFor(x => x.ClinicId, new { @class = "form-control", placeholder = "Klinik" })
            Doktor Durumu:<br />
            @Html.TextBoxFor(x => x.DoctorStatus, new { @class = "form-control", placeholder = "Klinik" })

            <button type="submit" name="btn1" class="btn btn-primary submit" style="float:left">Güncelle</button>
        </form>
    </div>
</div>

